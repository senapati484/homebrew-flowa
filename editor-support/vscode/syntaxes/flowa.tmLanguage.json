{
  "name": "Flowa",
  "scopeName": "source.flowa",
  "fileTypes": ["flowa"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#variables" },
    { "include": "#operators" },
    { "include": "#modules" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.flowa",
          "match": "//.*$"
        },
        {
          "name": "comment.block.flowa",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.flowa",
          "match": "\\b(if|else|while|for|return|break|continue|try|catch|throw|switch|case|default)\\b"
        },
        {
          "name": "keyword.other.flowa",
          "match": "\\b(let|const|var|function|func|class|new|this|super|extends|static|async|await|import|export|from|as)\\b"
        },
        {
          "name": "keyword.operator.new.flowa",
          "match": "\\bnew\\b"
        },
        {
          "name": "constant.language.flowa",
          "match": "\\b(true|false|null|undefined)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.flowa",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.flowa",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.flowa",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.flowa",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.template.flowa",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "constant.character.escape.flowa",
              "match": "\\\\."
            },
            {
              "name": "meta.template.expression.flowa",
              "begin": "\\$\\{",
              "end": "\\}",
              "patterns": [
                { "include": "$self" }
              ]
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.flowa",
          "match": "\\b\\d+(\\.\\d+)?([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.hex.flowa",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.flowa",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.octal.flowa",
          "match": "\\b0[oO][0-7]+\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.flowa",
          "match": "\\b([a-zA-Z_$][a-zA-Z0-9_$]*)\\s*(?=\\()"
        },
        {
          "name": "support.function.builtin.flowa",
          "match": "\\b(print|println|assert|test|len|push|pop|keys|values|typeof|parseInt|parseFloat|isNaN|isFinite)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.property.flowa",
          "match": "(?<=\\.)\\b[a-zA-Z_$][a-zA-Z0-9_$]*\\b"
        },
        {
          "name": "variable.other.flowa",
          "match": "\\b[a-zA-Z_$][a-zA-Z0-9_$]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.flowa",
          "match": "\\+|\\-|\\*|\\/|%|\\+\\+|\\-\\-"
        },
        {
          "name": "keyword.operator.comparison.flowa",
          "match": "==|!=|===|!==|<|>|<=|>="
        },
        {
          "name": "keyword.operator.logical.flowa",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.assignment.flowa",
          "match": "=|\\+=|\\-=|\\*=|\\/=|%="
        },
        {
          "name": "keyword.operator.bitwise.flowa",
          "match": "&|\\||\\^|~|<<|>>|>>>"
        }
      ]
    },
    "modules": {
      "patterns": [
        {
          "name": "support.type.module.flowa",
          "match": "\\b(http|sqlite|json|auth|jwt|mail|log|fs|os|env|cron)\\b"
        }
      ]
    }
  }
}
