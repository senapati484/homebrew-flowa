{
  "name": "Flowa",
  "scopeName": "source.flowa",
  "fileTypes": ["flowa", "fl"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#modules" },
    { "include": "#variables" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.flowa",
          "match": "//.*$"
        },
        {
          "name": "comment.block.flowa",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.flowa",
          "match": "\\b(if|else|while|for|return|break|continue|try|catch|finally|throw|switch|case|default)\\b"
        },
        {
          "name": "keyword.declaration.flowa",
          "match": "\\b(let|const|var|function|func|class|actor)\\b"
        },
        {
          "name": "keyword.other.flowa",
          "match": "\\b(new|this|super|extends|static|async|await|spawn|import|export|from|as)\\b"
        },
        {
          "name": "constant.language.flowa",
          "match": "\\b(true|false|null|undefined)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.flowa",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.flowa",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.flowa",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.flowa",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.template.flowa",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "constant.character.escape.flowa",
              "match": "\\\\."
            },
            {
              "name": "meta.template.expression.flowa",
              "begin": "\\$\\{",
              "end": "\\}",
              "patterns": [
                { "include": "$self" }
              ]
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.flowa",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.flowa",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.octal.flowa",
          "match": "\\b0[oO][0-7]+\\b"
        },
        {
          "name": "constant.numeric.flowa",
          "match": "\\b\\d+(\\.\\d+)?([eE][+-]?\\d+)?\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.definition.flowa",
          "match": "(?<=\\bfunc\\s+)([a-zA-Z_$][a-zA-Z0-9_$]*)"
        },
        {
          "name": "entity.name.function.flowa",
          "match": "\\b([a-zA-Z_$][a-zA-Z0-9_$]*)\\s*(?=\\()"
        },
        {
          "name": "support.function.builtin.flowa",
          "match": "\\b(print|println|assert|test|len|push|pop|shift|unshift|keys|values|typeof|type|tonumber|tostring|parseInt|parseFloat|isNaN|isFinite|power|sqrt|floor|ceil|round|abs|min|max|upper|lower|substring|contains|trim|replace|startsWith|endsWith|charAt|split|join|slice|sort|reverse|includes|indexOf)\\b"
        }
      ]
    },
    "modules": {
      "patterns": [
        {
          "name": "support.type.module.flowa",
          "match": "\\b(http|sqlite|json|auth|jwt|mail|log|fs|os|env|cron|time)\\b"
        },
        {
          "name": "support.function.module.flowa",
          "match": "(?<=\\.)\\b(createServer|on|listen|get|post|put|delete|setAllowedOrigins|addAllowedOrigin|setDevMode|setRateLimit|setMaxBodySize|enableCORS|setCORSOrigins|readFile|writeFile|appendFile|exists|open|close|exec|query|stringify|parse|hash|verify|sign|decode|send|info|warn|error|debug|schedule|now_ms|since_s)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.property.flowa",
          "match": "(?<=\\.)\\b[a-zA-Z_$][a-zA-Z0-9_$]*\\b"
        },
        {
          "name": "variable.parameter.flowa",
          "match": "(?<=\\()\\s*([a-zA-Z_$][a-zA-Z0-9_$]*)(?=\\s*[,)])"
        },
        {
          "name": "variable.other.flowa",
          "match": "\\b[a-zA-Z_$][a-zA-Z0-9_$]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.flowa",
          "match": "\\+\\+|\\-\\-|\\+|\\-|\\*|\\/|%"
        },
        {
          "name": "keyword.operator.comparison.flowa",
          "match": "===|!==|==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.flowa",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.assignment.flowa",
          "match": "\\+=|\\-=|\\*=|\\/=|%=|="
        },
        {
          "name": "keyword.operator.bitwise.flowa",
          "match": "<<|>>>|>>|&|\\||\\^|~"
        },
        {
          "name": "punctuation.bracket.flowa",
          "match": "[\\[\\]\\{\\}\\(\\)]"
        },
        {
          "name": "punctuation.separator.flowa",
          "match": "[,;:]"
        }
      ]
    }
  }
}
